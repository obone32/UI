@model StarmarxWeb.ModelsView.TeacherViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("TeacherRegister", "Account", FormMethod.Post))
{

    <div class="container">
        <div class="col-md-4"></div>
        <div class="col-md-4 login-div">
            <div class="login-head">Register</div>

            <div class="form-group">
                <label for="LoginName">
                    Teacher Name*
                    @Html.ValidationMessageFor(model => model.TeacherName, "", new { @class = "validation" })
                </label>
                @Html.EditorFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="form-group">
                <label for="text">
                    Class*
                    @Html.ValidationMessageFor(model => model.Class, "", new { @class = "validation" })
                </label>
                @*@Html.EditorFor(model => model.Class, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.Class, new SelectList(ViewBag.DDLClassID, "Value", "Text", Model.Class), "--Select--", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="text">
                    Division*
                    @Html.ValidationMessageFor(model => model.Division, "", new { @class = "validation" })
                </label>
                @*@Html.EditorFor(model => model.Division, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.Division, new SelectList(ViewBag.DDLDivID, "value", "text", Model.Division), "--Select--", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label for="text">
                    InstituteID*
                    @Html.ValidationMessageFor(model => model.InstituteID, "", new { @class = "validation" })
                </label>
                 @*@Html.EditorFor(model => model.InstituteID, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.InstituteID, new SelectList(ViewBag.DDLInstitudeID, "value", "text", Model.InstituteID), "--Select--", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="text">
                    RoleID*
                    @Html.ValidationMessageFor(model => model.RoleID, "", new { @class = "validation" })
                </label>
                @*@Html.EditorFor(model => model.RoleID, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.RoleID, new SelectList(ViewBag.DDLRoleID, "value", "text", Model.RoleID), "--Select--", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="GroupID">
                    GroupID*
                    @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "validation" })
                </label>
                @*@Html.EditorFor(model => model.GroupID, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.GroupID, new SelectList(ViewBag.DDLGroupID, "value", "text", Model.GroupID), "--Select--", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="MobileNo">
                    MobileNo*
                    @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "validation" })
                </label>
                @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <label for="EmailID">
                    EmailID*
                    @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "validation" })
                </label>
                @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })
            </div>


            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary s-p" />
            </div>
            <div class="form-group">
                @Html.ActionLink("Back to Login", "Index", "Account", new { }, null)
            </div>
        </div>

        <div class="col-md-4"></div>
    </div>

}
