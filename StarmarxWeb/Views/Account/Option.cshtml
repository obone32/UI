
@{
    ViewBag.Title = "Option";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Sign in.</title>
    <!-- CSS files -->
    <link href="~/Content/Tabler/dist/css/tabler.min.css" rel="stylesheet" />
    <link href="~/Content/Tabler/dist/css/tabler-flags.min.css" rel="stylesheet" />
    <link href="~/Content/Tabler/dist/css/tabler-payments.min.css" rel="stylesheet" />
    <link href="~/Content/Tabler/dist/css/tabler-vendors.min.css" rel="stylesheet" />
    <link href="~/Content/Tabler/dist/css/demo.min.css" rel="stylesheet" />
</head>
@using (Html.BeginForm("Option", "Account", FormMethod.Post))
{
    <div class="page page-center">
        <div class="container-tight py-4">
            <div class="card card-md">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Choose who you are.</h2>
                </div>
                <div class="card-body">
                        <div class="row align-items-start">
                            <div class="col">
                                <div class="form-selectgroup-label-content d-flex align-items-center">
                                    <span class=""><img class="manImg" src="~/Content/Tabler/images/IamaStudent.png"></span>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="font-weight-bold">@Html.ActionLink("I am Student", "StudentRegister", "Account", new { @class = "btn btn-primary w-100" }) </div>
                                </div>

                            </div>
                        </div>
                        <br />
                        <div class="row align-items-start">
                            <div class="col">
                                <div class="form-selectgroup-label-content d-flex align-items-center">
                                    <span class=""><img class="manImg" src="~/Content/Tabler/images/IamaTeacher.png"></span>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="font-weight-bold">@Html.ActionLink("I am Teacher", "TeacherRegister", "Account", new { @class = "btn btn-primary w-100" }) </div>
                                </div>

                            </div>
                        </div>
                        <br />
                        <div class="row align-items-start">
                            <div class="col">
                                <div class="form-selectgroup-label-content d-flex align-items-center">
                                    <span class=""><img class="manImg" src="~/Content/Tabler/images/IamaParent.png"></span>
                                </div>
                                    <div class="d-flex justify-content-center">
                                        <div class="font-weight-bold">@Html.ActionLink("I am Parent", "ParentRegister", "Account", new { @class = "btn btn-primary w-100" }) </div>
                                    </div>

                            </div>
                        </div>
                        <br />


                    
                    <div class="form-footer">
                        <button type="submit" class="btn btn-warning disabled w-100">Go Back</button>
                    </div>
                </div>
<div class="hr-text">or</div>
<div><br /><br /></div>

<div class="text-center text-muted mt-3">
    Don't have account yet? <a href="./sign-up.html" tabindex="-1">Contact Us</a>
</div>
<div><br /><br /><br /></div>
</div>
</div>

</div>
<!-- Libs JS --> <!-- Tabler Core -->
<script src="./dist/js/tabler.min.js"></script>
<script src="./dist/js/demo.min.js"></script>
}