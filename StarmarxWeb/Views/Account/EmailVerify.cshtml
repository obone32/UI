
@model StarmarxWeb.ModelsView.OtpViewModel

@{
    ViewBag.Title = "Email Verify";
    Layout = "~/Views/Shared/_account.cshtml";
}

@using (Html.BeginForm("EmailVerify", "Account", FormMethod.Post))
{

<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4 login-div">
        <div class="login-head">Email Verify</div>

        <div class="form-group">
            <label for="LoginName">
                OTP*
                @Html.ValidationMessageFor(model => model.OTP, "", new { @class = "validation" })
            </label>
            @Html.EditorFor(model => model.OTP, new { htmlAttributes = new { @class = "form-control" } })

        </div>
<p>@ViewBag.OTP</p>
        <div class="form-group">
            <input type="submit" value="Proceed" class="btn btn-primary s-p" />
        </div>

    </div>

    <div class="col-md-4"></div>
    @Html.HiddenFor(x => x.UserID)
    @Html.HiddenFor(x => x.Receiver)
</div>

}
