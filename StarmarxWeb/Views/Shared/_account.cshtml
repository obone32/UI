<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Starmarsx</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Starmarx", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IIDS</p>
        </footer>
    </div>

    <div class="modal fade" id="Error" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button id="DivClose" type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="text-align:center;">
                    <div class="error">
                        <img src="~/Assets/Images/error-image.png" width="10%" />
                    </div>
                    <div id="errorMsg">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="process" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<button id="DivClose" type="button" class="close" data-dismiss="modal">&times;</button>*@
                </div>
                <div class="modal-body" style="text-align:center;">
                    <div class="error">
                        <img src="~/Assets/Images/process.gif" width="10%" />
                    </div>
                    <div id="processMsg">
                        Please wait....
                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)

    <script>
          if ('@ViewBag.ErrorMesssage' != null && '@ViewBag.ErrorMesssage' != "") {
              $("#errorMsg").html('@ViewBag.ErrorMesssage');
              $('#process').modal('hide');
            $('#Error').modal('show');
        }
        $(".s-p").click(function () {
            if ($("form").valid()) {
                $('#process').modal('show');
            }
        });
    </script>
</body>
</html>

